<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <type-extension type-id="Profile">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="ckoCustomerId">
                <display-name xml:lang="x-default">Checkout.com Customer ID</display-name>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Checkout.com">
                <display-name xml:lang="x-default">Checkout.com</display-name>
                <attribute attribute-id="ckoCustomerId"/>
            </attribute-group>
        </group-definitions>
    </type-extension>
    <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="ckoUserAgent">
                <type>string</type>
                <default-value>SFCC Checkout.com Cartridge</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="ckoVersion">
                <type>string</type>
                <default-value>19.1.0</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="ckoEnabled">
                <display-name xml:lang="x-default">Enable</display-name>
                <description xml:lang="x-default">If set to yes, the Checkout.com payment form will be enabled and the default credit card form disabled.</description>
                <type>boolean</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>true</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="ckoMode">
                <display-name xml:lang="x-default">Mode</display-name>
                <description xml:lang="x-default">Should the Checkout.com payment method should run in sandbox or live mode.</description>
                <type>enum-of-string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <select-multiple-flag>false</select-multiple-flag>
                <value-definitions>
                    <value-definition>
                        <display xml:lang="x-default">Sandbox</display>
                        <value>sandbox</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Live</display>
                        <value>live</value>
                    </value-definition> 
                </value-definitions>
            </attribute-definition>
            <attribute-definition attribute-id="ckoStorefrontCore">
                <display-name xml:lang="x-default">Storefront Core Folder</display-name>
                <description xml:lang="x-default">SiteGenesis Core Folder Name</description>
                <type>string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
                <default-value>sitegenesis_storefront_core</default-value>
            </attribute-definition>            
            <attribute-definition attribute-id="ckoStorefrontController">
                <display-name xml:lang="x-default">Storefront Controller Folder</display-name>
                <description xml:lang="x-default">SiteGenesis Controllers Folder Name</description>
                <type>string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
                <default-value>sitegenesis_storefront_controllers</default-value>
            </attribute-definition>            
            <attribute-definition attribute-id="ckoDebugEnabled">
                <display-name xml:lang="x-default">Enable debug mode</display-name>
                <description xml:lang="x-default">If set to yes, the gateway requests and responses are displayed in the request log.</description>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>true</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="cko3ds">
                <display-name xml:lang="x-default">3D Secure</display-name>
                <description xml:lang="x-default">If set to yes, 3D Secure verification will be enabled for all transactions.</description>
                <type>boolean</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>false</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="ckoN3ds">
                <display-name xml:lang="x-default">Attempt Non 3D Secure</display-name>
                <description xml:lang="x-default">If set to yes, Non 3D Secure payment will be attempted if 3D Secure fails. Works only with 3D Secure enabled.</description>
                <type>boolean</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>true</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="ckoAutoCapture">
                <display-name xml:lang="x-default">Auto capture</display-name>
                <description xml:lang="x-default">If set to yes, the payment will be captured immediately. Otherwise, specify the capture below.</description>
                <type>boolean</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>true</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="ckoAutoCaptureTime">
                <display-name xml:lang="x-default">Auto capture time</display-name>
                <description xml:lang="x-default">Auto capture time in seconds</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
                <default-value>0</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="ckoSandboxPublicKey">
                <display-name xml:lang="x-default">Public key</display-name>
                <description xml:lang="x-default">Sandbox Public Key provided by Checkout.com</description>
                <type>string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="ckoSandboxPrivateKey">
                <display-name xml:lang="x-default">Private key</display-name>
                <description xml:lang="x-default">Sandbox Private Key provided by Checkout.com</description>
                <type>string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="ckoSandboxPrivateSharedKey">
                <display-name xml:lang="x-default">Private shared key</display-name>
                <description xml:lang="x-default">Sandbox Private Shared Key provided by Checkout.com</description>
                <type>string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="ckoLivePublicKey">
                <display-name xml:lang="x-default">Public key</display-name>
                <description xml:lang="x-default">Live Public Key provided by Checkout.com</description>
                <type>string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="ckoLivePrivateKey">
                <display-name xml:lang="x-default">Private key</display-name>
                <description xml:lang="x-default">Live Private Key provided by Checkout.com</description>
                <type>string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="ckoLivePrivateSharedKey">
                <display-name xml:lang="x-default">Private shared key</display-name>
                <description xml:lang="x-default">Live Private Shared Key provided by Checkout.com</description>
                <type>string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Checkout.com [Sandbox]">
                <display-name xml:lang="x-default">Sandbox Account Settings</display-name>
                <attribute attribute-id="ckoSandboxPublicKey"/>
                <attribute attribute-id="ckoSandboxPrivateKey"/>
                <attribute attribute-id="ckoSandboxPrivateSharedKey"/>
            </attribute-group>
            <attribute-group group-id="Checkout.com [Live]">
                <display-name xml:lang="x-default">Live Account Settings</display-name>
                <attribute attribute-id="ckoLivePublicKey"/>
                <attribute attribute-id="ckoLivePrivateKey"/>
                <attribute attribute-id="ckoLivePrivateSharedKey"/>
            </attribute-group>
            <attribute-group group-id="Checkout.com [Payment]">
                <display-name xml:lang="x-default">Payment Settings</display-name>
                <attribute attribute-id="ckoEnabled"/>
                <attribute attribute-id="ckoMode"/>
                <attribute attribute-id="ckoStorefrontCore"/>
                <attribute attribute-id="ckoStorefrontController"/>
                <attribute attribute-id="ckoDebugEnabled"/>
                <attribute attribute-id="cko3ds"/>
                <attribute attribute-id="ckoN3ds"/>
                <attribute attribute-id="ckoAutoCapture"/>
                <attribute attribute-id="ckoAutoCaptureTime"/>
            </attribute-group>
       </group-definitions>
    </type-extension>
</metadata>